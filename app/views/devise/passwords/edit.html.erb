<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label:  I18n.t('devise.passwords.edit.new'),
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: I18n.t('devise.passwords.edit.newHtml') } %>
    <%= f.input :password_confirmation,
                label: I18n.t('devise.passwords.edit.confirm'),
                required: true,
                input_html: { autocomplete: I18n.t('devise.passwords.edit.confirmHtml') } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, I18n.t('devise.passwords.edit.change') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
